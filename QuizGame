            questions.add(new Question("What is the name of the smallest bone in the human body?", new String[]{"Stapes", "Malleus", "Incus", "Clavicle"}, 1, "It‚Äôs located in the middle ear."));
            questions.add(new Question("Which element has the chemical symbol 'Na'?", new String[]{"Sodium", "Nitrogen", "Neon", "Nickel"}, 1, "It‚Äôs a soft, silvery-white metal."));
            questions.add(new Question("Who developed the theory of relativity?", new String[]{"Isaac Newton", "Nikola Tesla", "Albert Einstein", "Max Planck"}, 3, "His work revolutionized our understanding of physics."));
            questions.add(new Question("What is the name of the largest volcano in the solar system?", new String[]{"Olympus Mons", "Mount Everest", "Kilauea", "Mount Fuji"}, 1, "It‚Äôs located on Mars."));
