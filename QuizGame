import java.util.*;
import javax.sound.sampled.*;
import java.io.File;
import java.io.IOException;

class Question {
    private String questionText;
    private String[] options;
    private int correctAnswer;
    private String hint;

    public Question(String questionText, String[] options, int correctAnswer, String hint) {
        this.questionText = questionText;
        this.options = options;
        this.correctAnswer = correctAnswer;
        this.hint = hint;
    }

    public String getQuestionText() {
        return questionText;
    }

    public String[] getOptions() {
        return options;
    }

    public String getHint() {
        return hint;
    }

    public boolean isCorrect(int answer) {
        return answer == correctAnswer;
    }
}

class Player {
    private String name;
    private int score;

    public Player(String name) {
        this.name = name;
        this.score = 0;
    }

    public String getName() {
        return name;
    }

    public int getScore() {
        return score;
    }

    public void incrementScore() {
        score++;
    }

    public void decrementScore() {
        score--;
    }
}

public class QuizGame {
    private static final int QUESTION_COUNT = 15;
    private static Scanner scanner = new Scanner(System.in);

    public static void main(String[] args) {
        playSound("start.wav");

        System.out.print("Enter your name: ");
        String playerName = scanner.nextLine();
        Player player = new Player(playerName);

        
        String difficultyLevel = chooseDifficulty();

        // Welcome message
        System.out.println("\n" + coloredText("Welcome, " + player.getName() + " to the Ultimate Quiz Challenge!", "cyan"));
        System.out.println(coloredText("üöÄ Let's get started!\n", "green"));

        // Create the questions
        List<Question> questions = createQuestions(difficultyLevel);
        Collections.shuffle(questions); // Shuffle questions to make selection random
        List<Question> selectedQuestions = questions.subList(0, QUESTION_COUNT); // Select 15 questions

        // Loop through questions
        for (int i = 0; i < selectedQuestions.size(); i++) {
            Question question = selectedQuestions.get(i);
            System.out.println(coloredText("‚ú® Question " + (i + 1) + ": " + question.getQuestionText(), "magenta"));
            for (int j = 0; j < question.getOptions().length; j++) {
                System.out.println("  " + coloredText((j + 1) + ". " + question.getOptions()[j], "blue"));
            }

            // Get the player's answer
            int playerAnswer = getAnswer();

            // Process the answer
            if (playerAnswer >= 1 && playerAnswer <= 4) { // Valid range check
                if (question.isCorrect(playerAnswer)) {
                    player.incrementScore();
                    System.out.println(coloredText("‚úÖ Correct!\n", "green"));
                    playSound("correct.wav");
                } else {
                    System.out.println(coloredText("‚ùå Incorrect.\n", "red"));
                    playSound("wrong.wav");
                }
            } else {
                System.out.println(coloredText("‚ùå Invalid answer. Please enter a number between 1 and 4.\n", "red"));
            }
            System.out.println(coloredText("‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ", "white"));
        }

        // End message and final score
        System.out.println(coloredText("üéâ Quiz Over! üéâ", "yellow"));
        System.out.println(coloredText("üìä Your final score: " + player.getScore() + "/" + QUESTION_COUNT, "green"));
        playSound("end.wav");
        System.out.println(coloredText("Thanks for playing, " + player.getName() + "! üåü", "cyan"));
    }

