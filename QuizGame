            questions.add(new Question("Which city hosted the first modern Olympics?", new String[]{"Paris", "London", "Athens", "Berlin"}, 3, "It was in the late 19th century."));
            questions.add(new Question("What is the freezing point of water in Fahrenheit?", new String[]{"32¬∞F", "0¬∞F", "-32¬∞F", "-100¬∞F"}, 1, "This is the standard freezing temperature."));
            questions.add(new Question("What is the main ingredient in traditional Japanese miso soup?", new String[]{"Tofu", "Seaweed", "Miso", "Rice"}, 3, "It‚Äôs made from fermented soybeans."));
            questions.add(new Question("Which city is known as the City of Love?", new String[]{"Venice", "Paris", "Rome", "Berlin"}, 2, "It‚Äôs known for romance and its iconic Eiffel Tower."));
